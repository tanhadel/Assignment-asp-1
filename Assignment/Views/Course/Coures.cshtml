

@{
    ViewData["Title"] = "Courses";
}
<section class="courses"> 
    <div class="container">
        <div class="header">
            <nav class="course-home-menu">
                <a asp-action="Home" asp-controller="Default">Home</a>
                <a asp-action="Coures" asp-controller="Coures">Courses</a>
            </nav>
            <h2>Courses</h2>
            <form class="filter">
                <div class="select">
                    <div class="selected">All categories</div>
                    <div class="select-options">
                        <div class="option" data-value="all">All categories</div>
                        @if (Model.Categories != null)
                        {
                            @foreach (var category in Model.Categories)
                            {
                                <div class="option" data-value="@category.CategoryName">@category.CategoryName</div>
                            }
                        }
                    </div>
                </div>

                <div class="input-search-group">
                    <input id="searchQuery" name="searchQuery" placeholder="Search courses" />
                    <i class="fa-regular fa-search"></i>
                </div>

            </form>


        </div>

    </div>
</section>